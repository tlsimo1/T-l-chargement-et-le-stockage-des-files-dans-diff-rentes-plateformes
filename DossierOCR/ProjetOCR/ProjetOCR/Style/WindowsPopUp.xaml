<ResourceDictionary x:Class="GeneraFiEFWPF.WindowsPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       >
    
    <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ContentPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style  TargetType="{x:Type Button}">
        <Setter  Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="gFermer" Background="{TemplateBinding Background}" >
                        <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Padding="0" Foreground="White" RenderTransformOrigin="0.5,0.5" Width="Auto" Margin="1,0,0,0" >
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1.5"/>
                                </TransformGroup>
                            </TextBlock.RenderTransform></TextBlock>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="gFermer" Property="Background" Value="#FF6C7383"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MainWindow3" 
           TargetType="{x:Type Window}" >
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="ResizeMode" Value="CanResize" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Century Gothic" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid >
                        <Border x:Name="MainBorder" 
                                BorderBrush="#FF2E323D" 
                                BorderThickness="1" 
                                CornerRadius="2" 
                                Background="{DynamicResource CouleurFondMenu}"
                                >
                            <DockPanel LastChildFill="True">
                                <Rectangle x:Name="PART_LEFT_BORDER" 
                                           Width="4" 
                                           Cursor="SizeWE">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="#FF2E323D" />
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle x:Name="PART_RIGHT_BORDER" 
                                           Cursor="SizeWE" 
                                           Width="4" 
                                           DockPanel.Dock="Right">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="#FF2E323D" />
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle x:Name="PART_TOP_BORDER" 
                                           Cursor="SizeNS" 
                                           DockPanel.Dock="Top" 
                                           Height="4">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="#FF2E323D" />
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle x:Name="PART_BOTTOM_BORDER" 
                                           Cursor="SizeNS" 
                                           Height="4" 
                                           DockPanel.Dock="Bottom">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="#FF2E323D" />
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Border x:Name="PART_TITLEBAR" 
                                        Margin="0" 
                                        Height="30" 
                                        DockPanel.Dock="Top"
                                        CornerRadius="2" 
                                        Background="Transparent" MouseLeftButtonDown="MoveWindow" MouseMove="OnBorderMouseMove" >
                                    <DockPanel LastChildFill="False">
                                        <Border Height="30" Width="30" Background="#FF383E4C">
                                            <Image Source="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}" DockPanel.Dock="Left" HorizontalAlignment="Stretch" Width="30" Height="30" OpacityMask="White" Stretch="None"/>
                                        </Border>
                                        <TextBlock Margin="4,0,0,0" 
                                                   VerticalAlignment="Center" 
                                                   FontStretch="UltraExpanded" 
                                                   Foreground="White" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   TextWrapping="NoWrap" 
                                                   Text="{TemplateBinding Title}" 
                                                   FontSize="16" FontFamily="Century Gothic" HorizontalAlignment="Left" />
                                        <StackPanel  DockPanel.Dock="Right" Orientation="Horizontal">
                                            <Button x:Name="PART_Max"  Focusable="False"  Visibility="Collapsed"
                                                Cursor="Hand"
                                                VerticalAlignment="Stretch"  Content="T"
                                                Margin="0" Width="30" Background="#FF383E4C"  BorderBrush="{x:Null}" HorizontalAlignment="Stretch" Height="30" BorderThickness="0" Click="PART_CLOSE_Max" IsCancel="False" Style="{DynamicResource btnWindow}"  />
                                            <Button x:Name="PART_CLOSE"  Focusable="False"
                                                Cursor="Hand"
                                                VerticalAlignment="Stretch" Content="X"
                                                Margin="0" Width="30" Background="#FF383E4C" BorderBrush="{x:Null}" HorizontalAlignment="Stretch" Height="30" BorderThickness="0" Click="PART_CLOSE_Click" IsCancel="False"  Style="{DynamicResource btnWindow}"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>

                                <!-- Title bar separator-->
                                <Border Height="4" 
                                        DockPanel.Dock="Top" Background="#FF2E323D" 
                                         />

                                <!-- Actual Window Content -->
                                <AdornerDecorator DockPanel.Dock="Bottom">
                                    <ContentPresenter />
                                </AdornerDecorator>
                            </DockPanel>
                        </Border>
                        <ContentControl Content="{Binding CurrentPage}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Window.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Name="FormFadeAnimation" Storyboard.TargetProperty="(Window.Opacity)"
                                     From="0.0" To="1.0" Duration="0:0:0.2" AutoReverse="False" RepeatBehavior="1x" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

