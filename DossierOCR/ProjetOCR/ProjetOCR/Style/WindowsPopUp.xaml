                                                VerticalAlignment="Stretch"  Content="X"
                                                Margin="0" Width="30" Background="#FF383E4C" BorderBrush="{x:Null}" HorizontalAlignment="Stretch" Height="30" BorderThickness="0" Click="PART_CLOSE_Click" IsCancel="False"  Style="{DynamicResource btnWindow}"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>

                                <!-- Title bar separator-->
                                <Border Height="4" 
                                        DockPanel.Dock="Top" Background="#FF2E323D" 
                                         />

                                <!-- Actual Window Content -->
                                <AdornerDecorator DockPanel.Dock="Bottom">
                                    <ContentPresenter />
                                </AdornerDecorator>
                            </DockPanel>
                        </Border>
                        <ContentControl Content="{Binding CurrentPage}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Window.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Name="FormFadeAnimation" Storyboard.TargetProperty="(Window.Opacity)"
